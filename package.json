{
  "name": "news-bot-be",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/app/api/server.ts",
    "job:ingest": "tsx src/app/cron/newsIngestCron.ts",
    "job:publish": "tsx src/app/cron/publishingCron.ts",
    "cli:ingest": "tsx src/app/cli/newsIngestCli.ts",
    "cli:ingest:dry-run": "tsx src/app/cli/newsIngestCli.ts --dry-run",
    "cli:publish": "tsx src/app/cli/publishDigestCli.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app/api/server.js",
    "start:job:ingest": "node dist/app/cron/newsIngestCron.js",
    "start:job:publish": "node dist/app/cron/publishingCron.js",
    "start:cli:ingest": "node dist/app/cli/newsIngestCli.js",
    "start:cli:publish": "node dist/app/cli/publishDigestCli.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "better-sqlite3": "^12.6.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "luxon": "^3.5.0",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.10.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
