{
  "name": "news-bot-be",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/app/api/server.ts",
    "dev:cron:ingest": "tsx watch src/app/cron/newsIngestCron.ts",
    "dev:cron:publish": "tsx watch src/app/cron/publishingCron.ts",
    "dev:cli:ingest": "tsx src/app/cli/newsIngestCli.ts",
    "dev:cli:ingest:dry-run": "tsx src/app/cli/newsIngestCli.ts --dry-run",
    "dev:cli:publish": "tsx src/app/cli/publishDigestCli.ts",
    "build": "tsc -p tsconfig.json",
    "pm2:start": "npm run build && pm2 start ecosystem.config.js",
    "pm2:reload": "npm run build && pm2 startOrReload ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:list": "pm2 list",
    "pm2:logs": "pm2 logs",
    "pm2:logs:cron": "pm2 logs cron:boot-sequence cron:news:ingest cron:publishing:digest",
    "pm2:save": "pm2 save",
    "pm2:flush": "pm2 flush",
    "start": "node dist/app/api/server.js",
    "start:cron:ingest": "node dist/app/cron/newsIngestCron.js",
    "start:cron:publish": "node dist/app/cron/publishingCron.js",
    "start:cli:ingest": "node dist/app/cli/newsIngestCli.js",
    "start:cli:publish": "node dist/app/cli/publishDigestCli.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "better-sqlite3": "^12.6.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "luxon": "^3.5.0",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.10.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
